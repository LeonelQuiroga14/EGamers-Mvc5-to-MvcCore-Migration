@using Gamers.DataAccess.Models

@model Cliente
@{
    ViewBag.Title = "Editar";
}
<h2>Editar</h2>
<form method="post" action="Editar">

    <div class="form-group">
        <input type="text" hidden value="@Model.Id" name="Id" class="form-control" id="Id">

        <label for="Nombre">Nombre</label>
        <input type="text" value="@Model.Nombre" name="Nombre" class="form-control" id="Nombre">
    </div>
    <div class="form-group">
        <label for="Apellido">Apellido</label>
        <input type="text" value="@Model.Apellido" name="Apellido" class="form-control" id="Apellido">
    </div>

    <div class="form-group">
        <label for="Dni">Documento</label>
        <input type="text" value="@Model.Dni" name="Dni" class="form-control" id="Dni" placeholder="1234..">
    </div>
    <div class="form-group">
        <label for="Genero">Genero</label>
        <input type="text" class="form-control" name="Genero" value="@Model.Genero" id="Genero" placeholder="M-F-FA-MA">
    </div>

    <button type="submit" class="btn btn-outline-success">Editar</button>
    <button class="btn btn-outline-danger">Volver</button>
</form>
