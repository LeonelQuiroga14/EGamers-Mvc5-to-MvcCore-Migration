@using Gamers.DataAccess.Models
@model List<Cliente>
@{
    ViewBag.Title = "Listado de clientes";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Nuevo", "Crear", new {}, new { @class = "btn btn-success" })
    </div>
</div>
<br />

    <table class="table table-striped table-dark">
        <thead >
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Dni</th>
                <th scope="col">genero</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellido</td>
                    <td>@cliente.Dni</td>
                    <td>@cliente.Genero</td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id = cliente.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Eliminar", "Eliminar", new { id = cliente.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>

            }

        </tbody>
    </table>


